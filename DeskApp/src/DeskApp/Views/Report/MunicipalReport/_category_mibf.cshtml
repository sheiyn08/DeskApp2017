@* --------------------- MIBF / MF ==> Proposed and Prioritized Sub-Projects --------------------- *@

<div class="panel panel-info" ng-show="selected_subreport.id == 12" id="subreport_12">
    <div class="panel panel-body">

        <div style="float:right">
            Report Generated: {{dateGenerated}}
        </div>

        <h3>KC Municipal Report - Municipal Inter-Barangay Forum / Municipal Forum</h3>
        <h4>{{selected_subreport.name}}</h4>

        <br /><br />

        <div class="row">
            <div class="col-md-3">
                <b>Region: </b>{{selected_region.Name == null ? "" : selected_region.Name}}
            </div>
            <div class="col-md-3">
                <b>Province: </b>{{selected_province.Name == null ? "Across Provinces" : selected_province.Name}}
            </div>
            <div class="col-md-3">
                <b>Municipality: </b>{{selected_city.Name == null ? "Across Municipalities" : selected_city.Name}}
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <b>Project: </b>{{selected_fund.Name == null ? "Across Projects" : selected_fund.Name}}
            </div>
            <div class="col-md-3">
                <b>Cycle: </b>{{selected_cycle.Name  == null ? "Across Cycle" : selected_cycle.Name}}
            </div>
            <div class="col-md-3">
                <b>KC Mode: </b>{{selected_enrollment.Name  == null ? "Across KC Modes" : selected_enrollment.Name}}
            </div>
        </div>
        <br /><br />

        <div class="row">
            <div class="col-md-12"><strong>A. List of Sub-Projects Proposed and Prioritized during the MIBF/MF</strong></div>
        </div>

        <div class="row">
            <table class="table table-bordered">
                <tr>
                    <td align="center">
                        Rank
                    </td>
                    <td align="center">
                        Title Proposal
                    </td>
                    <td align="center">
                        Lead Barangay
                    </td>
                    <td align="center">
                        Proposed KC Grant Amount
                    </td>
                    <td align="center">
                        LCC Amount
                    </td>
                    <td align="center">
                        Total Amount
                    </td>
                    <td align="center">
                        Status
                    </td>
                </tr>
                <tr ng-repeat="item in mibf_projects| orderBy: 'rank'">
                    <td>
                        {{item.rank}}
                    </td>
                    <td>
                        {{item.project_name}}
                    </td>
                    <td>
                        {{item.brgy_name}}
                    </td>
                    <td>
                        {{item.kc_amount}}
                    </td>
                    <td>
                        {{item.lcc_amount}}
                    </td>
                    <td>
                        {{item.kc_amount + item.lcc_amount}}
                    </td>
                    <td>
                        {{item.is_priority == 1 ? "Prioritized" : "Non-Prioritized"}}
                    </td>
                </tr>
            </table>
        </div>

    </div>

    <div class="panel panel-body" style="margin:10px">
        @Html.Partial("~/Views/Report/Common/_report_footer_template.cshtml")
    </div>

</div>


