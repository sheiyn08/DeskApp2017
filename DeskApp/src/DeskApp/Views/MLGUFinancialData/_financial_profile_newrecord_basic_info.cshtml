<div class="panel-body">
    <form name="basicForm">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-3">
                    <label for="Region:_">Region</label>
                    <div class="form-group">
                        <select name="Region" ng-model="data.region_code" class="form-control" ng-required="true"
                                ng-disabled="status"
                                ng-options="option.Id as option.Name for option in region_code_options">
                            <option value="">[Select Region]</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-3">
                    <label for="Province:_">Province</label>
                    <div class="form-group">
                        <select name="Province" ng-model="data.prov_code" class="form-control" ng-required="true"
                                ng-disabled="data.region_code == null || status"
                                ng-options="option.Id as option.Name for option in prov_code_options">
                            <option value="">[Select Province]</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-3">
                    <label for="Municipality:_">Municipality</label>
                    <div class="form-group">
                        <div class="form-group">
                            <select name="Municipality" ng-model="data.city_code" class="form-control" ng-required="true"
                                    ng-disabled="data.prov_code == null || status" ng-change="populate()"
                                    ng-options="option.Id as option.Name for option in city_code_options">
                                <option value="">[Select Municipality]</option>
                            </select>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="col-md-3">
                    <label>Talakayan Year</label>
                    <select name="talakayan_yr" ng-model="data.talakayan_yr_id" class="form-control" ng-required="true"
                            ng-change=""
                            ng-options="option.Id as option.Name for option in talakayan_year_options">
                        <option value="">[Select Year]</option>
                    </select>
                </div>
                <div class="col-md-3" show-errors='{showSuccess: true}' ng-hide="data.talakayan_yr_id == null">
                    <label>Talakayan Day (Start)</label>
                    <md-datepicker name="talakayan_date_start" ng-model="dt_talakayan_date_start" md-placeholder="Enter date" ng-change="data.talakayan_date_start = dt_talakayan_date_start.toISOString()" ng-required="true" md-min-date="minStartDate" md-max-date="maxStartDate"
                                   ng-disabled="data.talakayan_yr_id == 3 || data.talakayan_yr_id == 4 || data.talakayan_yr_id == 5"></md-datepicker>
                </div>
                <div class="col-md-3" show-errors='{showSuccess: true}' ng-hide="data.talakayan_yr_id == null">
                    <label>Talakayan Day (End)  </label>
                    <md-datepicker name="talakayan_date_end" ng-model="dt_talakayan_date_end" md-placeholder="Enter date" ng-change="data.talakayan_date_end = dt_talakayan_date_end.toISOString()" ng-required="true" md-min-date="minEndDate" md-max-date="maxEndDate"
                                   ng-disabled="data.talakayan_yr_id == 3 || data.talakayan_yr_id == 4 || data.talakayan_yr_id == 5"></md-datepicker>
                </div>
                <div class="col-md-3">
                    <label>Current NCDDP Cycle</label>
                    <select name="cycle_id" ng-model="data.cycle_id" id="cycle_code" class="form-control"
                            ng-required="true"
                            ng-options="option.Id as option.Name for option in cycle_id_options">
                        <option value="">[Select Cycle]</option>
                    </select>
                </div>
            </div>            
        </div> <br />
        
    </form>
    <br />
</div>