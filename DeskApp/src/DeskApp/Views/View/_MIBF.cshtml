 

@model PagedList.IPagedList<WebApp.DataLayer.Entities.municipal_forum>
@using PagedList;
@{Layout = null;}
@using PagedList.Mvc;





<div class="box">
    <div class="box-header">
        <h3 class="box-title">  Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount || @Model.TotalItemCount Records</h3>

        <form>
            <label>Records per page</label>
            <select class="pagesize" name="FiltPages" id="FiltPages" onchange="filter()">
                <option value="10"></option>

                <option value="10">10</option>

                <option value="20">20</option>
                <option value="30">30</option>
                <option value="40">40</option>
                <option value="50">50</option>
                <option value="100">100</option>
            </select>


        </form>

        <div class="box-tools">
            @Html.PagedListPager(Model, page => Url.Action("_mibf",
    new
    {
        item = ViewBag.FilterModel,
        page,


    }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "result" }))



        </div>

    </div>

    <br />
    <div class="box-body no-padding">
        <table class="table table-striped">
            <tr>

                <th>
                    Fund Source
                </th>
                <th>
                    Cycle
                </th>
                <th>
                    Region
                </th>
                <th>
                    Province
                </th>
                <th>
                    Municipality
                </th>
           

                <th>
                    Purpose
                </th>
                <th>
                    Enrollment Type
                </th>


                <th>
                    Male
                </th>
                <th>
                    Female
                </th>
                <th>
                    IP Male
                </th>
                <th>
                    IP Female
                </th>
                <th>
                    Old Male
                </th>
                <th>
                    Old Female
                </th>
                <th>
                    LGU Male
                </th>
                <th>
                    LGU Female
                </th>


            </tr>

            @foreach (var item in Model)
            {
                <tr>


                    <td>
                        @Html.DisplayFor(modelItem => item.lib_fund_source.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.lib_cycle.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.lib_region.region_nick)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.lib_province.prov_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.lib_city.city_name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.lib_municipal_forum_purpose.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.lib_enrollment.name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.no_atn_male)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.no_atn_female)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.no_ip_male)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.no_ip_female)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.no_old_male)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.no_old_female)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.no_lgu_male)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.no_lgu_female)
                    </td>


                </tr>
            }

        </table>

    </div><!-- /.box-body -->
</div><!-- /.box -->
