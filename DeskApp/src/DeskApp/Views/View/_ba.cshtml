<style>
    .with_highlight {
        background-color: lightgreen;
    }

    .no_highlight {
        background-color: transparent;
    }

    mark {
        background-color: deepskyblue;
        color: white;
        font-style: italic;
    }
</style>

<div class="panel panel-body" ng-show="!isSearching">
    <table class="table zui-table zui-table-horizontal zui-table-highlight">
        <thead class="thead-inverse">
            <tr>
                <th style="text-align:center; vertical-align:middle">
                    {{data.check_all == true ? "Un-select All" : "Select All"}}
                    <br /><br />
                    <md-checkbox ng-model="data.check_all" style="vertical-align:middle" aria-label="Checkbox 1" ng-change="checkAll()"></md-checkbox>
                </th>
                <th style="vertical-align:middle">
                    Actions
                </th>
                <th style="vertical-align:middle">
                    Region
                </th>
                <th style="vertical-align:middle">
                    Province
                </th>
                <th style="vertical-align:middle">
                    Municipality
                </th>
                <th style="vertical-align:middle">
                    Barangay
                </th>
                <th style="vertical-align:middle">
                    Project
                </th>
                <th style="vertical-align:middle">
                    Cycle
                </th>
                <th style="vertical-align:middle">
                    KC Mode
                </th>
                <th style="vertical-align:middle">
                    Purpose
                </th>
                <th style="vertical-align:middle">
                    Date Uploaded
                </th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="item in Items | orderBy: item.last_modified_date">
                <td style="text-align:center; vertical-align:middle">
                    <md-checkbox ng-model="item.is_item_selected" ng-change="itemSelectedforSync(item)" aria-label="false"></md-checkbox> {{item.is_item_selected == true ? "Selected" : ""}}
                </td>
                <td style="vertical-align:middle">
                    <a ng-href="/Entry/BarangayAssembly?id={{item.brgy_assembly_id}}" class="btn btn-info"><i class="fa fa-edit"></i></a>
                    <a ng-click="delete(item)" class="btn btn-warning"><span data-toggle='tooltip' title='Delete Record' class='glyphicon glyphicon-trash'></span></a>
                </td>
                <td style="vertical-align:middle">
                    {{item.lib_region_region_name}}
                </td>
                <td style="vertical-align:middle">
                    {{item.lib_province_prov_name}}
                </td>
                <td style="vertical-align:middle">
                    {{item.lib_city_city_name}}
                </td>
                <td style="vertical-align:middle">
                    {{item.lib_brgy_brgy_name}}
                </td>
                <td style="vertical-align:middle">
                    {{item.lib_fund_source_name}}
                </td>
                <td style="vertical-align:middle">
                    {{item.lib_cycle_name}}
                </td>
                <td style="vertical-align:middle">
                    {{item.lib_enrollment_name}}
                </td>
                <td style="vertical-align:middle">
                    {{item.lib_barangay_assembly_purpose_name}}
                </td>
                <td style="vertical-align:middle" ng-show="item.push_status_id == 2 || item.push_status_id == 3">
                    <mark>(For Uploading)</mark>
                </td>
                <td style="vertical-align:middle" ng-show="item.push_date == null && item.push_status_id == 1">
                    N/A
                </td>
                <td style="vertical-align:middle" ng-show="item.push_date!=null">
                    {{item.push_date | date:'MM/dd/yyyy'}}
                </td>
            </tr>

        </tbody>

    </table>
</div>