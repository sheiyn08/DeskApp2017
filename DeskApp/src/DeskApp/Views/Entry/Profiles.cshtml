                                   })

                               });


                            $scope.viewMov = function (item) {
                                var base = window.location.origin;

                                $http.get('/api/mov/get/module_form_name?id=' + item.attached_document_id).then(function (response) {
                                    $scope.pdf_details = response.data;

                                    if ($scope.pdf_details.mov_list_id == 14) {
                                        item.url = base + "/MOVs/" + "PP_CommunityVolunteersProfile_" + item.attached_document_id + ".pdf";
                                    }
                                    else if ($scope.pdf_details.mov_list_id == 51) {
                                        item.url = base + "/MOVs/" + "PP_CDDSPWorkerBasicProfile_" + item.attached_document_id + ".pdf";
                                    }
                                    else {
                                        alert("Attachment not found");
                                    }

                                    var newtab = window.open(item.url, '_blank');
                                    newtab.focus();

                                });
                            };


                            $scope.deleteMov = function (removeitem) {



                                var ask = confirm("Are you sure you want to Delete attachment? This will also be deleted on the MOVs folder.");


                                if (ask == true) {
                                    $.post('/api/delete/attached_document?id=' + removeitem.attached_document_id).success(function (value) {
                                        $scope.loading = false;



                                        var index = $scope.attached_documents.indexOf(removeitem);
                                        $scope.attached_documents.splice(index, 1);


                                        alert("Record removed!")

                                    }).error(function (data) {

                                        alert(JSON.stringify(data));


                                        $scope.error = "An Error has occured while Deleting! " + data.statusText;
                                        $scope.loading = false;
                                    });

                                }

                            }
                            //END ATTACHMENTS



                            $scope.save = function () {


                                $scope.$broadcast('show-errors-check-validity');
                                $scope.loading = true;

                                //'/api/v1/grievances/save'
                                $scope.data.other_training = JSON.stringify($scope.data.other_trainings);
                                $scope.data.other_membership = JSON.stringify($scope.data.other_memberships);


                                $.post('/api/offline/v1/profiles/save', $scope.data)
                                    .success(function (data) {
                                        $scope.loading = false;
                                        $('html, body').animate({ scrollTop: '0px' }, 1500);
                                        $mdToast.show(
                                            $mdToast.simple()
                                            .textContent('Record Saved!')
                                            .position("top right")
                                            .hideDelay(3000)
                                        );

                                        $scope.check_status();

                                    })
                                    .error(function (data) {

                                        alert(JSON.stringify(data));


                                        $scope.error = "An Error has occured while Saving! " + data.statusText;
                                        $scope.loading = false;
                                    });
                            };
                        });


                    $scope.$watch('data.region_code',
