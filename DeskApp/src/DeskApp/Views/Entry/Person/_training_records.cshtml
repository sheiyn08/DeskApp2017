<div class="panel panel-info">

    <div class="panel-heading">
        <h4>  KC Trainings Attended</h4>
        <p>This lists all the trainings recieved by the person from KALAHI</p>


    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">

                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th></th>
                            <th>
                                Training Title
                            </th>
                            <th>
                                Start
                            </th>
                            <th>
                                End
                            </th>
                        </tr>

                    </thead>

                    <tbody>
                        <tr ng-repeat="item in person_trainings">

                            <td>
                                <a ng-href="/Entry/trainings?id={{item.community_training_id}}" class="btn btn-info"><i class="fa fa-edit"></i></a>

                            </td>


                            <td>

                                {{item.training_title}}

                            </td>

                            <td>

                                {{item.start_date | date:'MM/dd/yyyy'}}

                            </td>


                            <td>

                                {{item.end_date | date:'MM/dd/yyyy'}}

                            </td>




                        </tr>
                    </tbody>

                </table>








            </div>
        </div>
    </div>
</div>