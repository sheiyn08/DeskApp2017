        <div flex>
            <md-checkbox ng-model="data.phy_has_rehabilitation_target_secondary" aria-label="Checkbox 1" ng-disabled="true">
            </md-checkbox>
        </div>
        <div flex>
            Rehabilitation /Repair / Reconstruction
        </div>
        <div flex>
            {{lib_project_type.phy_rehabilitation_unit_secondary}}
        </div>
        <div flex>
            @*ng-disabled="!data.phy_has_rehabilitation_target_secondary"*@
            <input class="form-control" type="number" ng-model="data.phy_rehabilitation_target_secondary" ng-change="data.s_phy_rehabilitation_target_secondary = data.phy_rehabilitation_target_secondary"  />
