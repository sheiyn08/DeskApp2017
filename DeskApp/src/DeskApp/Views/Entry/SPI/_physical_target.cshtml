<div class="panel panel-info">

    <div class="panel-heading">
        <h4>Physical Target and Actual Accomplishment</h4>
    </div>

    <div layout="row" layout-margin flex="100">
        <div flex>Active? <small>Check if YES</small></div>
        <div flex>Category</div>
        <div flex>Unit of Measure</div>
        <div flex>Target</div>
        <div flex>Actual (if completed)</div>
    </div>

    <div layout="row" layout-margin flex="100" ng-show="lib_project_type.phy_has_construction_target == true">
        <div flex>
            <md-checkbox ng-model="data.phy_has_construction_target" aria-label="Checkbox 1" ng-disabled="true">
            </md-checkbox>
        </div>
        <div flex>
            Construction
        </div>
        <div flex>
            {{lib_project_type.phy_construction_unit}}
        </div>
        <div flex>
            @*ng-disabled="!data.phy_has_construction_target"*@
            <input class="form-control" name="Construction Target" type="number" ng-model="data.phy_construction_target" ng-change="data.s_phy_construction_target = data.phy_construction_target" ng-disabled="true" />
        </div>
        <div flex>
            @*ng-disabled="!data.phy_has_construction_target"*@
            <input class="form-control" name="Construction Actual" type="number" ng-model="data.phy_construction_actual" ng-change="data.s_phy_construction_actual = data.phy_construction_actual" ng-disabled="true" />
        </div>
    </div>

    <div layout="row" layout-margin flex="100" ng-show="lib_project_type.phy_has_improvement_target ==true">
        <div flex>
            <md-checkbox ng-model="data.phy_has_improvement_target" aria-label="Checkbox 1" ng-disabled="true">
            </md-checkbox>
        </div>
        <div flex>
            Improvement/Upgrading
        </div>
        <div flex>
            {{lib_project_type.phy_improvement_unit}}
        </div>
        <div flex>
            @*ng-disabled="!data.phy_has_improvement_target"*@ 
            <input class="form-control" name="Improvement Target" type="number" ng-model="data.phy_improvement_target" ng-change="data.s_phy_improvement_target = data.phy_improvement_target" ng-disabled="true" />
        </div>
        <div flex>
            @*ng-disabled="!data.phy_has_improvement_target"*@
            <input class="form-control" name="Improvement Actual" type="number" ng-model="data.phy_improvement_actual" ng-change="data.s_phy_improvement_actual = data.phy_improvement_actual" ng-disabled="true" />
        </div>
    </div>

    <div layout="row" layout-margin flex="100" ng-show="lib_project_type.phy_has_rehabilitation_target">
        <div flex>
            <md-checkbox ng-model="data.phy_has_rehabilitation_target" aria-label="Checkbox 1" ng-disabled="true">
            </md-checkbox>
        </div>
        <div flex>
            Rehabilitation /Repair / Reconstruction
        </div>
        <div flex>
            {{lib_project_type.phy_rehabilitation_unit}}
        </div>
        <div flex>
            @*ng-disabled="!data.phy_has_rehabilitation_target"*@
            <input class="form-control" name="Rehab Target" type="number" ng-model="data.phy_rehabilitation_target" ng-change="data.s_phy_rehabilitation_target = data.phy_rehabilitation_target" ng-disabled="true" />
        </div>
        <div flex>
            @*ng-disabled="!data.phy_has_rehabilitation_target"*@
            <input class="form-control" name="Rehab Actual" type="number" ng-model="data.phy_rehabilitation_actual" ng-change="data.s_phy_rehabilitation_actual = data.phy_rehabilitation_actual" ng-disabled="true" />
        </div>
    </div>

    <div layout="row" layout-margin flex="100" ng-show="lib_project_type.phy_has_purchase_target">
        <div flex>
            <md-checkbox ng-model="data.phy_has_purchase_target" aria-label="Checkbox 1">
            </md-checkbox>
        </div>
        <div flex>
            Purchase / Acquisition / Provision (training)
        </div>
        <div flex>
            {{lib_project_type.phy_purchase_unit}}
        </div>
        <div flex>
            @*ng-disabled="!data.phy_has_purchase_target"*@
            <input class="form-control" type="number" ng-model="data.phy_purchase_target" ng-change="data.s_phy_purchase_target = data.phy_purchase_target" ng-disabled="true"/>
        </div>
        <div flex>
            @*ng-disabled="!data.phy_has_purchase_target"*@
            <input class="form-control" type="number" ng-model="data.phy_purchase_actual" ng-change="data.s_phy_purchase_actual = data.phy_purchase_actual" ng-disabled="true"/>
        </div>
    </div>
    
    @*Secondary*@

    <div layout="row" layout-margin flex="100" ng-show="lib_project_type.phy_has_construction_target_secondary == true">
