                                   md-min-date="minDate" md-max-date="today" class="form-control"></md-datepicker>
                </div>*@
                <div flex>
                    <md-datepicker name="Date " ng-model="opmain.date_plan" md-placeholder="Enter date"
                                   md-max-date="today" class="form-control"></md-datepicker>
                </div>
                <div flex>
                    <input type="text" ng-model="opmain.capacity" class="form-control" />
